<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/apps_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:49"
            android:layout_marginStart="102dp"
            android:textColor="#fff"
            android:textSize="42sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/date"
            android:layout_below="@id/time"
            android:layout_alignStart="@id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-08-14"
            android:textColor="#fff"
            android:textSize="42sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/video_meeting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/video_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/video_meeting_icon"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:focusable="true"
                android:src="@drawable/ic_phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="视频会议"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/net_sys_set"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/net_set_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:focusable="true"
                android:src="@drawable/ic_net" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="网络设置"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/setting_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:focusable="true"
                android:src="@drawable/ic_setting" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="其他设置"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/file_manager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/file_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:src="@drawable/ic_folder"
                android:focusable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="文件管理"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/refresh_sys"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/refresh_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:src="@drawable/ic_refresh"
                android:focusable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="系统更新"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/apps"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/apps_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_margin="3dp"
                android:focusable="true"
                android:src="@drawable/ic_apps" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="全部应用"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>